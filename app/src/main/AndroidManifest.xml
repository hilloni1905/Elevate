<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- âœ… Permissions -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    <uses-permission android:name="android.permission.USE_EXACT_ALARM"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Final2"
        tools:targetApi="34">

                <!-- Login Activity - First screen -->
                <activity
                    android:name=".LoginActivity"
                    android:exported="true"
                    android:theme="@style/Theme.Final2">
                    <intent-filter>
                        <action android:name="android.intent.action.MAIN"/>
                        <category android:name="android.intent.category.LAUNCHER"/>
                    </intent-filter>
                </activity>
        <activity
            android:name=".RegisterActivity"
            android:exported="false"/>

        <!-- PERSONAL INFO ACTIVITY -->
        <activity
            android:name=".PersonalInfoActivity"
            android:exported="false"/>
                <!-- ============================================
                     HOME & NAVIGATION
                     ============================================ -->

                <!-- Home Activity - Main dashboard -->
                <activity
                    android:name=".HomeActivity"
                    android:exported="false"
                    android:launchMode="singleTop"
                    android:theme="@style/Theme.Final2"/>

                <!-- Profile Activity -->
                <activity
                    android:name=".ProfileActivity"
                    android:exported="false"
                    android:parentActivityName=".HomeActivity"
                    android:theme="@style/Theme.Final2"/>

                <!-- ============================================
                     FEATURE ACTIVITIES
                     ============================================ -->

                <!-- 1. Workout Planner (MainActivity3) -->


                <!-- 2. Meal Tracker -->
                <activity
                    android:name=".MealTrackerActivity"
                    android:exported="false"
                    android:label="Meal Tracker"
                    android:theme="@style/Theme.Final2"/>

                <!-- 3. Recipe Search -->
                <activity
                    android:name=".RecipeSearchActivity"
                    android:exported="false"
                    android:label="Recipe Search"
                    android:theme="@style/Theme.Final2"/>

                <!-- 4. Calorie Lookup -->
                <activity
                    android:name=".CaloriesActivity"
                    android:exported="false"
                    android:label="Calorie Lookup"
                    android:theme="@style/Theme.Final2"/>

                <!-- 5. TDEE Calculator -->
                <activity
                    android:name=".tdeecalculatorMainActivity"
                    android:exported="false"
                    android:label="TDEE Calculator"
                    android:theme="@style/Theme.Final2"/>

                <!-- 6. Sleep Cycle -->
                <activity
                    android:name=".SleepMainActivity"
                    android:exported="false"
                    android:label="Sleep Cycle"
                    android:theme="@style/Theme.Final2"/>

                <!-- 7. Alarm Manager -->
                <activity
                    android:name=".AlarmMainActivity"
                    android:exported="false"
                    android:label="Smart Alarms"
                    android:theme="@style/Theme.Final2"
                    />

                <!-- 8. AI Chat Assistant -->
                <activity
                    android:name=".ChatAssistantActivity"
                    android:exported="false"
                    android:label="AI Assistant"
                    android:theme="@style/Theme.Final2"/>

                <!-- 9. Mood Analyzer (Watson Tone) -->
                <activity
                    android:name=".WatsoneMainActivity"
                    android:exported="false"
                    android:label="Mood Analyzer"
                    android:theme="@style/Theme.Final2"/>

        <!-- 10. Weather Workout -->
        <activity
            android:name=".WeatherWorkoutMainActivity"
            android:exported="false"
            android:label="Weather Workout"
            android:theme="@style/Theme.Final2"/>

        <activity
            android:name=".SpotifyLoginActivity"
            android:exported="true"
            android:label="Spotify"
            android:theme="@style/Theme.Final2">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="com.unified.healthfitness" android:host="callback" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlaylistActivity"
            android:exported="false"
            android:theme="@style/Theme.Final2"/>
        <activity
            android:name=".PersonalizedMainActivity"
            android:exported="false"
            android:label="Personalized Workouts and Meals"
            android:theme="@style/Theme.Final2"/>
        <activity
            android:name=".ResultActivity"
            android:exported="false"
            android:label="Personalized Workouts and Meals Results"
            android:theme="@style/Theme.Final2"
            android:parentActivityName=".PersonalizedMainActivity"/>

        <!--  Detailed Plan Activity  -->
        <activity android:name=".DetailedPlanActivity"
            android:exported="false"
            android:parentActivityName=".ResultActivity"
            android:theme="@style/Theme.Final2"/>
<!--Hydration-->
        <activity
            android:name=".WaterMainActivity"
            android:exported="false"
            android:label="Water Intake"
            android:theme="@style/Theme.Final2"/>
                <!-- ============================================
                     ADDITIONAL ACTIVITIES (if you have them)
                     ============================================ -->

                <!-- Recipe Detail Activity -->
                <activity
                    android:name=".RecipeDetailActivity"
                    android:exported="false"
                    android:theme="@style/Theme.Final2"/>

                <!-- Edit Alarm Activity -->
                <activity
                    android:name=".EditAlarmActivity"
                    android:exported="false"
                    android:theme="@style/Theme.Final2"
                    android:parentActivityName=".AlarmMainActivity"/>

        <activity android:name=".FullScreenAlarmActivity"
            android:exported="false"
            android:showOnLockScreen="true"
            android:theme="@style/Theme.Final2"
            android:turnScreenOn="true"/>
        <activity
            android:name=".StepMainActivity"
            android:exported="false"
            android:theme="@style/Theme.Final2"/>
        <activity
            android:name=".PeriodsMainActivity"
            android:exported="false"
            android:theme="@style/Theme.Final2"/>

        <activity
            android:name=".WorkoutSearchActivity"
            android:exported="false"
            android:theme="@style/Theme.Final2"/>

        <activity
            android:name=".WorkoutDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Final2"
            android:parentActivityName=".WorkoutSearchActivity"/>
        <activity
            android:name=".WorkoutLoggerActivity"
            android:exported="false"
            android:theme="@style/Theme.Final2"
            android:parentActivityName=".WorkoutSearchActivity"/>

                <!-- ============================================
                     BROADCAST RECEIVERS (for alarms)
                     ============================================ -->
                <receiver
                    android:name=".AlarmReceiver"
                    android:exported="false">
                </receiver>
        <receiver android:name=".ReminderReceiver" />

                <receiver
                    android:name=".BootReceiver"
                    android:exported="true"
                    android:enabled="true">
                    <intent-filter>
                        <action android:name="android.intent.action.BOOT_COMPLETED"/>
                    </intent-filter>
                </receiver>

    </application>

</manifest>
