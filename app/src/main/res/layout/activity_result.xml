<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Success Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#4CAF50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ“"
                    android:textSize="48sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assessment Complete!"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvResultTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Profile: Physical Type"
                    android:textColor="#E8F5E9"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Diet Recommendation Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ¥—"
                        android:textSize="28sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diet Plan"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDietRecommendation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading recommendations..."
                    android:textSize="15sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Workout Recommendation Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ’ª"
                        android:textSize="28sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Workout Plan"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvWorkoutRecommendation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading recommendations..."
                    android:textSize="15sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tips Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ’¡"
                        android:textSize="28sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android.text="Success Tips"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading tips..."
                    android:textSize="15sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Save Plan Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPlanName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter a name for this plan"
                        android:inputType="textCapWords"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnSavePlan"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Save and View Detailed Plan"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6200EE"
                    app:cornerRadius="28dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->

        <Button
            android:id="@+id/btnRestart"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Retake Assessment"
            android:textSize="16sp"
            android:textColor="#6200EE"
            android:backgroundTint="#FFFFFF"
            android:elevation="2dp"
            app:cornerRadius="28dp"
            app:strokeColor="#6200EE"
            app:strokeWidth="2dp" />

    </LinearLayout>
</ScrollView>