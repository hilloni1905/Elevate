<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Playlist Cover Image -->
        <ImageView
            android:id="@+id/ivPlaylistCover"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="Playlist cover"
            tools:src="@drawable/ic_music_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Playlist Name -->
        <TextView
            android:id="@+id/tvPlaylistName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="HIIT Workout Mix"
            app:layout_constraintTop_toTopOf="@id/ivPlaylistCover"
            app:layout_constraintStart_toEndOf="@id/ivPlaylistCover"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Playlist Description -->
        <TextView
            android:id="@+id/tvPlaylistDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="High intensity interval training music to keep you motivated"
            app:layout_constraintTop_toBottomOf="@id/tvPlaylistName"
            app:layout_constraintStart_toEndOf="@id/ivPlaylistCover"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Track Count -->
        <TextView
            android:id="@+id/tvTrackCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textColor="@color/text_hint"
            tools:text="50 tracks"
            app:layout_constraintTop_toBottomOf="@id/tvPlaylistDescription"
            app:layout_constraintStart_toEndOf="@id/ivPlaylistCover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivPlaylistCover" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>