<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F7">

    <!-- Home Layout -->
    <ScrollView
        android:id="@+id/homeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Period Tracker"
                android:textSize="28sp"
                android:textColor="#C084FC"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Current Phase Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFE4E9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/phaseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menstruation Phase"
                        android:textSize="26sp"
                        android:textColor="#D946EF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day 1 of 28"
                        android:textSize="18sp"
                        android:textColor="#86198F"
                        android:layout_marginTop="4dp" />
                        
                    <TextView
                        android:id="@+id/nextPeriodText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next period: "
                        android:textSize="18sp"
                        android:textColor="#86198F"
                        android:layout_marginTop="4dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommended Foods:"
                        android:textSize="16sp"
                        android:textColor="#86198F"
                        android:textStyle="bold"
                        android.layout.marginTop="16dp" />

                    <TextView
                        android:id="@+id/foodText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Iron-rich foods, dark chocolate, herbal tea"
                        android:textSize="14sp"
                        android:textColor="#701A75"
                        android:layout_marginTop="4dp"
                        android:lineSpacingMultiplier="1.2"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Input Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android_layout_height="wrap_content"
                        android:text="Update Cycle Info"
                        android:textSize="20sp"
                        android:textColor="#C084FC"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Period Start (DD/MM/YYYY)"
                        android:textSize="14sp"
                        android:textColor="#86198F"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/lastPeriodInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="01/01/2025"
                        android:inputType="text"
                        android:background="@drawable/edit_text_bg"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average Cycle Length"
                        android:textSize="14sp"
                        android:textColor="#86198F"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <EditText
                            android:id="@+id/cycleLengthInput"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="28"
                            android:inputType="number"
                            android:background="@drawable/edit_text_bg"
                            android:padding="12dp"
                            android:textSize="16sp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="days"
                            android:textSize="16sp"
                            android:textColor="#86198F" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/saveButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save &amp; Calculate"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_bg"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android_textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Music Layout -->
    <ScrollView
        android:id="@+id/musicLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/musicTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music for Your Phase"
                android:textSize="28sp"
                android:textColor="#C084FC"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect Spotify to view music suggestions"
                android:textSize="14sp"
                android:textColor="#86198F"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/connectButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect Spotify"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_bg"
                android:padding="14dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:id="@+id/playlistContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android="vertical" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:itemIconTint="@color/button_nav_color"
        app:itemTextColor="@color/button_nav_color"
        app:menu="@menu/bottom_menu"
        app:labelVisibilityMode="labeled" />

</RelativeLayout>