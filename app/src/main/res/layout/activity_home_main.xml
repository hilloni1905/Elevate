<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- MAIN CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_header"
                android:padding="20dp"
                android:elevation="4dp">

                <!-- Top Bar: Menu and Notifications -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/imgMenu"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_menu"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        android:contentDescription="Menu"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ElevAIte"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerInParent="true"/>

                    <!--<ImageView
                        android:id="@+id/imgNotifications"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_notifications"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        android:contentDescription="Notifications"/>-->
                </RelativeLayout>

                <!-- Greeting and User Info -->
                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning"
                    android:textSize="16sp"
                    android:textColor="#E0E0E0"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User ðŸ‘‹"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday, January 01"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- FEATURE CARDS SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Title: Fitness & Nutrition -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Fitness &amp; Nutrition"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- ROW 1: Workout Planner & Meal Tracker -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- CARD 1: AI Workout Planner -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardWorkoutPlanner"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_purple"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Workout"
                                android:src="@drawable/ic_workout" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Workout\nStimulation"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD 2: Meal Tracker -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMealTracker"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_green"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Meal"
                                android:src="@drawable/ic_food" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Meal\nTracker"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- ROW 2: Recipe Search & Calorie Lookup -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- CARD 3: Recipe Search -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRecipeSearch"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_orange"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Recipe"
                                android:src="@drawable/ic_recipe" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Recipe\nSearch"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD 4: Calorie Lookup -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardCalorieLookup"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_red"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Calories"
                                android:src="@drawable/ic_calories" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Calorie\nLookup"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- ROW 3: Weather Workout & Personalized Recommendations -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- CARD 5: Weather Workout -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardWeatherWorkout"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_cyan"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Weather Workout"
                                android:src="@drawable/ic_weather" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Weather\nWorkout"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD 6: Personalized Recommendations -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPersonalizedRecommendations"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_pink"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Personalized"
                                android:src="@drawable/ic_personalized" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Personalized\nPlan"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <!-- ROW 4: Steps -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- CARD 5: Weather Workout -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSteps"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_blue"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Steps Tracker"
                                android:src="@drawable/ic_steps" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Steps \nTracker "
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <!-- Section Title: Health Tools -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:text="Health Tools"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- ROW 4: TDEE Calculator & Sleep Cycle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- CARD 7: TDEE Calculator -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTDEECalculator"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_blue"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Calculator"
                                android:src="@drawable/ic_calculator" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="TDEE\nCalculator"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD 8: Sleep Cycle -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSleepCycle"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_indigo"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Sleep"
                                android:src="@drawable/ic_sleep" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Sleep\nCycle"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- ROW 5: Smart Alarms & Mood Analyzer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- CARD 9: Smart Alarms -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSmartAlarms"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_teal"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Alarm"
                                android:src="@drawable/ic_alarm" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Smart\nAlarms"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD 10: Mood Analyzer -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMoodAnalyzer"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_orange"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Mood"
                                android:src="@drawable/ic_mood" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Mood\nAnalyzer"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- ROW 6: Hydration Intake -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- CARD 11: Hydration Intake -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardWater"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_cyan"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Hydration"
                                android:src="@drawable/ic_water" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Hydration\nIntake"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Empty space for alignment -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1" />
                </LinearLayout>

                 Section Title: User Profile
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:text="Periods Tracker "
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                 FULL WIDTH: My Profile Card
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPeriods"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="6dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_purple_pink"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:contentDescription="Periods Tracker "
                            android:src="@drawable/ic_profile" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Periods Tracker "
                                android:textColor="@android:color/white"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Want to track your periods dont worry we got your back !!"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="12dp"
                            android:contentDescription="Go"
                            android:src="@drawable/ic_arrow_right" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Section Title: AI Assistant -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:text="AI Assistant"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- FULL WIDTH: AI Assistant Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAIAssistant"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="6dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_pink"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:contentDescription="AI Assistant"
                            android:src="@drawable/ic_ai" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="AI Health Assistant"
                            android:textColor="@android:color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Get fitness and diet guidance powered by AI"
                            android:textColor="#E0E0E0"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Section Title: Music & Motivation -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:text="Music &amp; Motivation"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- FULL WIDTH: Spotify Integration Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSpotify"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_margin="6dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_green"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:contentDescription="Spotify"
                            android:src="@drawable/ic_spotify" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Spotify"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
