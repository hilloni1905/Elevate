<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Date Navigation Header -->
            <LinearLayout
                android:id="@+id/dateNavigationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/white"
                android:elevation="4dp">

                <!-- Previous Day Button -->
                <ImageButton
                    android:id="@+id/btnPrevDay"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Previous day"
                   />

                <!-- Date Text -->
                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Today, Jan 15, 2024"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:gravity="center"
                    android:paddingHorizontal="8dp" />

                <!-- Next Day Button -->
                <ImageButton
                    android:id="@+id/btnNextDay"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_media_next"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Next day"
                    />

            </LinearLayout>

            <!-- Stats Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Total Calories -->
                    <TextView
                        android:id="@+id/totalCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 cal"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Calories"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp" />

                    <!-- Macros Progress -->
                    <!-- Protein -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/proteinProgress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:indicatorColor="#FF6B6B"
                            app:trackColor="#FFE0E0E0"
                            android:max="100"
                            android:progress="0" />

                        <TextView
                            android:id="@+id/proteinText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 / 150g"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Carbs -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carbs"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/carbsProgress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:indicatorColor="#4ECDC4"
                            app:trackColor="#FFE0E0E0"
                            android:max="100"
                            android:progress="0" />

                        <TextView
                            android:id="@+id/carbsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 / 250g"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Fat -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fat"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/fatProgress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:indicatorColor="#FFD93D"
                            app:trackColor="#FFE0E0E0"
                            android:max="100"
                            android:progress="0" />

                        <TextView
                            android:id="@+id/fatText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 / 70g"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Meal Sections -->
            <!-- Breakfast -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ… Breakfast"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/textPrimary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/breakfastRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp" />

            <!-- Lunch -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜€ï¸ Lunch"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/textPrimary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lunchRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp" />

            <!-- Dinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ™ Dinner"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/textPrimary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dinnerRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp" />

            <!-- Snacks -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸª Snacks"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/textPrimary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/snacksRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="80dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="@color/white"
        app:backgroundTint="@color/colorPrimary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>